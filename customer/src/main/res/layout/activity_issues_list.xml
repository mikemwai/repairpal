<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".IssuesList">

        <!-- Header -->
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car issue list"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textSize="20sp"/>

        <!-- List of Issues -->
        <LinearLayout
            android:id="@+id/issueList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="8dp">


            <CheckBox
                android:id="@+id/checkbox_issue_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:padding="8dp"/>
            <CheckBox
                android:id="@+id/checkbox_issue_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flat Tire"
                android:padding="8dp"/>
            <CheckBox
                android:id="@+id/checkbox_issue_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keylock"
                android:padding="8dp"/>
            <CheckBox
                android:id="@+id/checkbox_issue_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel"
                android:padding="8dp"/>
            <!-- Repeat for other issues -->
        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/submitButton"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="#000080"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ksh 2000"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </RelativeLayout>

